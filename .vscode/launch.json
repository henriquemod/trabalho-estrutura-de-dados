 "version": "0.2.0",
 "configurations": [
  {
   "name": "C Debug",
   "type": "cppdbg",
   "request": "launch",
   "program": "${workspaceFolder}/main", // Replace with the actual path to your compiled executable
   "args": [],
   "stopAtEntry": false,
   "cwd": "${workspaceFolder}",
   "environment": [],
   "externalConsole": false,
   "MIMode": "gdb",
   "setupCommands": [
    {
     "description": "Enable pretty-printing for gdb",
     "text": "-enable-pretty-printing",
     "ignoreFailures": true
    }
   ],
   "preLaunchTask": "build", // Replace with the task name used to build your project
   "miDebuggerPath": "/usr/bin/gdb" // Replace with the actual path to your GDB executable
  }
 ]
}
